@model List<Entity.Genre>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<h1>Genres</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model)
            {
                <tr>
                    <td>@x.ID</td>
                    <td>@x.Name</td>
                    <td><a href="/Genre/GetById/@x.ID" class="btn btn-success">Update</a></td>
                    <td><a href="/Genre/Delete/@x.ID" class="btn btn-danger">Delete</a></td>

                </tr>
            }
    </tbody>
</table>
<a href="/Genre/NewGenre/" class="btn btn-primary">New Genre</a>